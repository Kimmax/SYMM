<Page x:Name="page" x:Class="SYMM_Frontend_WPF.Pages.Downloaden"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SYMM_Frontend_WPF"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400">

    <Grid Style="{StaticResource ContentRoot}" Margin="0,28,0,16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnDownload" Content="Download" HorizontalAlignment="Right" Margin="0,3,16,3" VerticalAlignment="Center" Grid.Row="1" Height="26" Click="btnDownload_Click"/>
        <TextBlock Text="{Binding TotalNumberVideos, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat='Total number of videos: {0}'}" x:Name="labNumVids" TextWrapping="Wrap" VerticalAlignment="Center" Margin="101,8,0,8" Height="16" TextAlignment="Right" HorizontalAlignment="Left" MinWidth="131" Grid.Row="1"/>
        <ScrollViewer x:Name="infoScroller" Margin="0" ScrollChanged="infoScroller_ScrollChanged">
            <ItemsControl ItemsSource="{Binding LoadedVideos, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  x:Name="videoInfoList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" IsItemsHost="True" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
        <CheckBox x:Name="checkAllBox" Content="Select all" HorizontalAlignment="Left" Margin="10,8,0,0" Grid.Row="1" VerticalAlignment="Top" Checked="checkAllBox_StateChanged" Unchecked="checkAllBox_StateChanged" IsChecked="True"/>
    </Grid>
</Page>
