<Page x:Class="SYMM_Frontend_WPF.Pages.Downloaden"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SYMM_Frontend_WPF"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400">

    <Grid Style="{StaticResource ContentRoot}" Margin="0,28,0,16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>
        <local:VideoItemList x:Name="videoList" Margin="0"/>
        <Button x:Name="btnDownload" Content="Download" HorizontalAlignment="Right" Margin="0,3,16,3" VerticalAlignment="Center" Grid.Row="1" Height="26" Width="88"/>
        <TextBlock x:Name="labNumVids" TextWrapping="Wrap" Text="Total Number of videos:" VerticalAlignment="Center" Margin="16,0,0,0" Height="16" TextAlignment="Right" HorizontalAlignment="Left" MinWidth="131" Grid.Row="1"/>
    </Grid>
</Page>
