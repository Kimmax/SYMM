<mui:ModernDialog x:Class="SYMM_Frontend_WPF.Dialogs.CollectByNameDialog"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  mc:Ignorable="d"
                  Title="Collect information" Height="74" Width="357" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <!-- Note: ModernDialog buttons are defined in the constructor of the code behind class -->

    <Grid Margin="0">
        <Border VerticalAlignment="Center" Margin="0">
            <Grid>
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Write the name of the channel in the box below:" VerticalAlignment="Top"/>
                <TextBox HorizontalAlignment="Left" Height="23" Margin="0,21,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="300"/>
            </Grid>
        </Border>
    </Grid>

</mui:ModernDialog>
